
<div class="row">
  <div class="col-lg-4 col-md-offset-4 text-center" style="margin-top:150px;margin-bottom:50px;" >
    <h2>Editez son profil </h2>
    <!--<%= resource_name.to_s.humanize %>-->
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control"  %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>
  <div class="field">
  <label for="">Votre Prénom</label><br />
    <%= f.text_field :first_name, autofocus: true, class:"form-control" %>
  </div>
  <br>

  <div class="field">
  <label for="">Votre nom de famille</label><br />
    <%= f.text_field :last_name, autofocus: true, class:"form-control" %>
  </div>
  <br>
  <div class="field">
  <label for="">Votre numéro de téléphone</label><br />
    <%= f.text_field :phone, autofocus: true, class:"form-control" %>
  </div>
  <br>

  <div class="field">
    <label for=>votre mot de passe</label> <i>(laissez en blanc si vous ne voulez pas le changer)</i><br />
    <%= f.password_field :password, autocomplete: "new-password" , class:"form-control" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field">
    <label for="">Confirmation de votre nouveau mot de passe</label><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control"  %>
  </div>
<br>
  <div class="field">
    <label for=""> Mot de passe actuel</label><br />
 <i>(nous avons besoin de votre mot de passe actuel pour confirmer vos modifications)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" , class:"form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "Mettre à jour" %>
  </div>
<% end %>

<<h3>Annuler mon compte</h3>

<p>Nous sommes triste de votre départ !<%= button_to "Annuler mon compte", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Retour", :back %>
</div>
</div>
