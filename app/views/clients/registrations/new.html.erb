<body style="width: 100%;
  height: 100%;
  background-image: url('/bricolage.jpg');
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;">

<div class="row">
  <div class="col-lg-4 col-md-offset-4 col-xs-10 col-xs-offset-1" style="margin-top:150px;margin-bottom:50px;" id="zone_sign_client">
<div class="text-center">
  <h3 class="text-pre-sign">Je suis client</h3>

</div>


<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
  <label for="">Votre Pr√©nom</label><br />
    <%= f.text_field :first_name, autofocus: true, class:"form-control" %>
  </div>
  <br>

  <div class="field">
  <label for="">Votre nom de famille</label><br />
    <%= f.text_field :last_name, autofocus: true, class:"form-control" %>
  </div>
  <br>

  <div class="field">
    <label for="">Votre Email</label><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
  </div>

  <br>

  <div class="field">
    <label for="">Votre mot de passe</label>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" , class:"form-control" %>
  </div>
  <br>
  <div class="field">
      <label for="">Votre mot de passe</label><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" , class:"form-control"%>
  </div>
  <br><br>
  <div class="actions">
    <%= f.submit "Valider" , class: "btn btn-primary btn-lg  btn-block" %>
  </div>
<% end %>
<br>
<%= render "clients/shared/links" %>
</div>
</div>
</body>
