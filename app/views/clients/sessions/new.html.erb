<body style="width: 100%;
  height: 100%;
  background-image: url('/bricolage.jpg');
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;">
<div class="row">
  <div class="col-lg-4 col-md-offset-4" style="margin-top:150px; margin-bottom:100px;" id="zone_sign_client">
    <div class="text-center">
      <h3 class="text-pre-sign">Connectez-vous</h3>

    </div>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <label for="">Votre Email</label><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email",:class => "form-control" %>
  </div>
  <br>
  <div class="field">
  <label for="">Votre mot de passe</label><br />
    <%= f.password_field :password, autocomplete: "current-password", :class => "form-control" %>
  </div>
  <br>
  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <label for="">se souvenir de moi</label>
    </div>
  <% end %>
  <div class="actions">
    <%= f.submit "Connectez-vous" , class: "btn btn-primary btn-lg  btn-block" %>
  </div>

  <% end %>

  <%= render "clients/shared/links" %>
</div>
</div>
</body>
