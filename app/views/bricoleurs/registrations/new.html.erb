<div class="container">
<div class="row">

  <div class="text-center" style="margin-top:150px;">
    <h2>S'inscrire comme bricoleur</h2>

  </div>
  <div class="col-md-offset-2 col-md-8 "style="margin-top:80px;">

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="col-md-6" style="margin-bottom:20px;">
        <label for="">Votre pr√©nom</label>
        <%= f.text_field :firstname, autofocus: true, class: "form-control", placeholder: "Dimitri" %>
      </div>

        <div class="col-md-6" style="margin-bottom:20px;">
        <label for="">Votre nom</label>
        <%= f.text_field :lastname, autofocus: true, class: "form-control", placeholder: "Payet" %>
      </div>
      <br>
      <div class=" col-md-6" style="margin-bottom:20px;">
        <label for="">Votre phone</label>
        <%= f.text_field :phone, autofocus: true, class: "form-control", placeholder: " 06 93 94 95 96" %>
      </div>
      <br />
     <div class=" col-md-6" style="margin-bottom:20px;">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>
      <br />
      <div class=" col-md-6" style="margin-bottom:20px;">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password"  ,class: "form-control"%>
      </div>
      <br />
      <div class=" col-md-6" style="margin-bottom:20px;">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" , class: "form-control"%>
      </div>

      <div class="actions">
        <%= f.submit "valider" ,class: "btn btn-primary btn-lg"%>
      </div>
    <% end %>

<%= render "users/shared/links" %>
</div></div></div>
