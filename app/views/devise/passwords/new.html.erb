<div class="row">
  <div class="col-lg-4 col-md-offset-4 text-center" style="margin-top:150px;margin-bottom:50px;" >
    <h3 class="text-pre-sign">Réinitialiser le mot de passe <br>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
<br>
  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email" , class:"form-control", placeholder:"entrez votre email"%>
  </div>
<br>

  <div class="actions">
    <%= f.submit "Envoyez le lien de réinitialisation" ,class: "btn btn-primary btn-lg  btn-block" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>
